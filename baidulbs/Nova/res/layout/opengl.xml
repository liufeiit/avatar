<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_room_top_bg" >

        <Button
            android:id="@+id/back_view"
            style="@style/layout_wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/rect_black_bg"
            android:text="返回"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_more"
            style="@style/layout_wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/rect_black_bg"
            android:text="更多"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/opengl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout>

</LinearLayout>